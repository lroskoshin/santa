model Room {
  id            String    @id @default(cuid())
  name          String
  allowWishlist Boolean   @default(true)
  requireEmail  Boolean   @default(false)
  locale        String    @default("ru") // Locale used when creating room (for emails and OG)
  inviteToken   String    @unique
  adminToken    String
  createdAt     DateTime  @default(now())
  shuffledAt    DateTime? // Когда была проведена жеребьёвка (null = ещё не проводилась)

  participants Participant[]
  assignments  Assignment[]

  @@index([adminToken])
}

